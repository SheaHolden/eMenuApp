<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/menuItemPrice"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:text="TextView"
        android:textColor="@color/darkText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/badgeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/badgeLayout" />

    <LinearLayout
        android:id="@+id/badgeLayout"
        android:layout_width="204dp"
        android:layout_height="24dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:onClick="onBadgeContainerClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/menuItemPrice"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>